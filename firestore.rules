rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection
    match /users/{userId} {
      // Jeder authentifizierte Benutzer kann seinen eigenen Eintrag lesen
      allow read: if request.auth != null;
      // Admin-Check (Beispiel: prüft ein Flag im User-Dokument)
      function isAdmin(userId) {
          return request.auth != null && get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
      }
    }

    // CMS Collections (entfernt)
    /*
    match /cms_content/{contentId} {
      // Nur Admins können CMS-Inhalte lesen und schreiben
      allow read: if true;  // Öffentlich lesbar
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /cms_versions/{versionId} {
      // Nur Admins können Versionen verwalten
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /cms_sections/{sectionId} {
      // Abschnitts-Konfiguration
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    */

    // Buchungen
    match /buchungen/{buchungId} {
      // Erstellen erlauben, wenn die notwendigen Daten vorhanden sind und der Status 'angefragt' ist.
      // Erlaubt auch für nicht-authentifizierte Benutzer (request.auth == null).
      allow create: if request.resource.data.status == 'angefragt' &&
                       request.resource.data.date is timestamp &&
                       request.resource.data.time is string &&
                       request.resource.data.customer.name is string &&
                       request.resource.data.customer.name.size() > 0 &&
                       request.resource.data.customer.email is string &&
                       request.resource.data.customer.email.matches('.+@.+\\..+'); // Einfache E-Mail-Prüfung
                       // Optional: Weitere Felder prüfen (duration, treatment etc.)
                       
      // Jeder darf lesen (z.B. für Verfügbarkeitsprüfung durch Website/App)
      allow read: if true;
      
      // Update/Delete nur durch Admin erlaubt
      allow update, delete: if isAdmin(request.auth.uid);
    }
    
    // Kontaktanfragen
    match /kontaktanfragen/{anfragenId} {
      // Erstellen erlauben, wenn Name und E-Mail vorhanden sind.
      allow create: if request.resource.data.name is string &&
                       request.resource.data.name.size() > 0 &&
                       request.resource.data.email is string &&
                       request.resource.data.email.matches('.+@.+\\..+');
                       
      // Lesen/Update/Delete nur durch Admin
      allow read, update, delete: if isAdmin(request.auth.uid);
    }
    
    // Verfügbare Zeitslots
    match /verfuegbare_slots/{slotId} {
      // Lesen darf jeder (für Website-Kalender)
      allow read: if true;
      // Schreiben (Erstellen, Ändern, Löschen) nur durch Admin
      allow write: if isAdmin(request.auth.uid);
    }
    
    // Admin-Einstellungen
    match /admin_settings/{settingId} {
      // Nur Admin hat vollen Zugriff
      allow read, write: if isAdmin(request.auth.uid);
    }
  }
} 